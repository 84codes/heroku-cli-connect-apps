{
  "compilerOptions": {
    "strictNullChecks": false,
    "strict": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "target": "es2017",
    "lib": [
      "es7"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "compileOnSave": true
}
